{
  "makeBuildArtifacts": true,
  "http": {
    "enable": false
  },
  "https": {
    "enable": true,
    "port": 12243,
    "options": {
      "cert": "cert.pem",
      "key": "key.pem"
    }
  },
  "secretsPath": "secrets",
  "favicon": "images/favicon.ico",
  "modelsPath": "mvc/models",
  "viewsPath": "mvc/views",
  "controllersPath": "mvc/controllers",
  "viewEngine": [
    "html:teddy"
  ],
  "css": {
    "sourcePath": "css",
    "compiler": {
      "enable": true,
      "module": "sass",
      "options": {}
    },
    "output": "css",
    "versionFile": null
  },
  "js": {
    "sourcePath": "js",
    "webpack": {
      "enable": true,
      "bundles": [
        {
          "config": {
            "entry": "${js.sourcePath}/main.js",
            "output": {
              "path": "${publicFolder}/js"
            },
            "resolve": {
              "alias": {
                "fs": false,
                "path": false
              },
              "modules": [
                "${js.sourcePath}",
                "${buildFolder}/js",
                "${appDir}",
                "node_modules"
              ]
            }
          }
        }
      ]
    }
  },
  "symlinks": [
    {
      "source": "${staticsRoot}/images",
      "dest": "${publicFolder}/images"
    }
  ]
}